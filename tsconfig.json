{
  "compilerOptions": {
    "target": "ES5",
    "module": "commonjs",
    "outDir": "build",
    "removeComments": true,
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "baseUrl": "./src/ts",
    "paths": {
      "@/*": ["*"]
    }
  },
  "includes": ["./src/*"],
  "exclude": ["./node_modules", "./lint-staged.config.js"]
}
